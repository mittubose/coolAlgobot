# XCoin Scalping Bot - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE
# ============================================================================

# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/xcoin_dev

# Connection pool settings
DB_MIN_CONNECTIONS=5
DB_MAX_CONNECTIONS=20

# ============================================================================
# ZERODHA API CREDENTIALS
# ============================================================================

# Get these from https://kite.zerodha.com/apps
ZERODHA_API_KEY=your_api_key_here
ZERODHA_API_SECRET=your_api_secret_here

# Access token (generated after OAuth login)
ZERODHA_ACCESS_TOKEN=your_access_token_here

# ============================================================================
# RISK MANAGEMENT
# ============================================================================

# Maximum risk per trade (default: 2% of account)
MAX_RISK_PER_TRADE=0.02

# Maximum daily loss (default: 6% of account)
MAX_DAILY_LOSS=0.06

# Maximum drawdown from peak (default: 15%)
MAX_DRAWDOWN=0.15

# Maximum open positions (default: 5)
MAX_POSITIONS=5

# Minimum risk-reward ratio (default: 2:1)
MIN_RISK_REWARD=2.0

# Maximum position size in shares (default: 1000)
MAX_POSITION_SIZE=1000

# Price sanity check - reject orders outside Â±X% of LTP (default: 10%)
PRICE_SANITY_PCT=0.10

# Maximum loss on single position (default: 5% of account)
MAX_POSITION_LOSS_PCT=0.05

# ============================================================================
# APPLICATION
# ============================================================================

# Application mode: development or production
APP_MODE=development

# Debug mode (true/false)
DEBUG=true

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Dashboard server settings
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8050

# ============================================================================
# ALERTS (Optional)
# ============================================================================

# Telegram Bot (for alerts)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email (SMTP for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
ALERT_EMAIL_TO=

# ============================================================================
# NOTES
# ============================================================================

# 1. NEVER commit the .env file to git (it's in .gitignore)
# 2. Keep your Zerodha credentials secure
# 3. Start with PAPER trading mode before going LIVE
# 4. Test risk limits in paper trading first
# 5. Monitor the kill switch - it will save you from catastrophic losses
