# Copy this file to secrets.env and fill in your actual credentials
# NEVER commit secrets.env to version control!

# Zerodha API Credentials
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here
KITE_ACCESS_TOKEN=  # Generated after login, leave empty initially

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email Alerts (Optional)
EMAIL_PASSWORD=

# Database (If using PostgreSQL)
DB_PASSWORD=

# Encryption Key (for storing sensitive data)
ENCRYPTION_KEY=  # Will be auto-generated on first run
