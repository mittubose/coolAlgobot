# Copy this file to secrets.env and fill in your actual credentials
# NEVER commit secrets.env to version control!

# Zerodha API Credentials
KITE_API_KEY=your_api_key_here
KITE_API_SECRET=your_api_secret_here
KITE_ACCESS_TOKEN=  # Generated after login, leave empty initially

# Flask Security
FLASK_SECRET_KEY=  # Generate with: python -c "import secrets; print(secrets.token_hex(32))"

# Encryption Key (for storing sensitive data)
ENCRYPTION_KEY=  # Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# Telegram Bot (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Email Alerts (Optional)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=
EMAIL_PASSWORD=

# Database (If using PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=trading
DB_USERNAME=postgres
DB_PASSWORD=

# Dashboard Authentication (Recommended for production)
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=  # Use strong password in production
